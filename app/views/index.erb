<% if @skills.empty? %>
  <div class="empty-skill-index">
    <a href="/skills/new">Add a skill</a>to the Skill Inventory
  </div>
<% else %>
  <div class="skill-index">
    <% @skills.each do |skill| %>
    <div id="skill-<%= skill.id %>">
      <a href="/skills/<%= skill.id %>"><%= skill.title.capitalize %></a>
      <a href="/skills/<%= skill.id %>/update">Update</a>
      <form id="delete-skill-<%= skill.id %>">
        <input type="hidden" name="_method" value="delete" />
        <input type="submit" value="Delete" />
      </form>
    </div>
    <% end %>
  </div>
<% end %>
